<p id="notice"><%= notice %></p>

<h1>Clientes</h1>

<table>
  <thead>
    <tr>
      <th>Documento</th>
      <th>Nome</th>
      <th>Email</th>
      <th>Telefone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clientes.each do |cliente| %>
      <tr>
        <td><%= cliente.documento %></td>
        <td><%= cliente.nome %></td>
        <td><%= cliente.email %></td>
        <td><%= cliente.telefone %></td>
        <td><%= link_to 'detalhes', cliente, class: "bt-info bt" %></td>
        <td><%= link_to 'Editar', edit_cliente_path(cliente), class: "bt-blue bt" %></td>
        <td><%= link_to 'Deletar', cliente, class: "bt-red bt", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'cadastrar Cliente', new_cliente_path, class: "bt-green bt" %>